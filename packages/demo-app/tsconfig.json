{
  "compilerOptions": {
    "jsx": "react",
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es6",
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "lib": ["es5", "es6", "dom"],
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ]
}