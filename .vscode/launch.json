    "version": "0.2.0",
    "configurations": [
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch in Chrome",
            "url": "https://localhost:443",
            "webRoot": "${workspaceFolder}",
            "runtimeArgs": [
                "--ignore-certificate-errors"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch fuzz tests",
            "program": "${workspaceFolder}/packages/trot-sequence/dist/fuzz-test/main.js"
        }

    ]
}